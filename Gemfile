# frozen_string_literal: true

# This Gemfile is used to manage the dependencies for the project.
# It specifies the gems required for testing and running the application.

source "https://rubygems.org" # The source for fetching the gems.

# gem "rails" # Uncomment to add Rails as a dependency.

gem "cucumber", "~> 9.2" # Cucumber is used for running feature tests.
gem 'selenium-webdriver' # Selenium WebDriver is used for browser automation in tests.
gem 'rspec-expectations' # RSpec Expectations is used for making assertions in tests.

group :test do
  gem 'rspec' # RSpec is a testing framework for Ruby.
  gem 'rspec-mocks' # RSpec Mocks is used for creating mock objects in tests.
end
